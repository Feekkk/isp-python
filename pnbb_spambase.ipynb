import pandas as pd
import numpy as np
from sklearn.model_selection import train_test_split
from sklearn.preprocessing import StandardScaler
from sklearn.neural_network import MLPClassifier
from sklearn.metrics import classification_report, confusion_matrix, accuracy_score

# --- CONFIGURATION: Dataset Source ---
# Source: UCI Machine Learning Repository (Spambase Dataset)
DATA_URL = "https://archive.ics.uci.edu/ml/machine-learning-databases/spambase/spambase.data"

def print_section(title):
    print("\n" + "="*60)
    print(f" {title}")
    print("="*60)

def main():
    # ---------------------------------------------------------
    # STEP 1: LOAD & INSPECT DATA
    # ---------------------------------------------------------
    print_section("STEP 1: DATA LOADING")
    try:
        print("Fetching data from UCI Repository...")
        df = pd.read_csv(DATA_URL, header=None)
        
        # Calculate Input and Output counts
        num_inputs = df.shape[1] - 1  # All columns except the last one
        num_outputs = 1               # The last column (Target)
        
        print(f"Successfully loaded spambase dataset.")
        print(f"Total Samples: {df.shape[0]}")
        
        # --- NEW OUTPUT: Inputs & Outputs ---
        print(f"Structure Identified:")
        print(f"   > Input Data (Features): {num_inputs}")
        print(f"   > Output Data (Target):  {num_outputs} (Binary Class: Spam vs Not Spam)")
        
    except Exception as e:
        print(f"[!] Error loading data: {e}")
        return

    # ---------------------------------------------------------
    # STEP 2: PRE-PROCESSING
    # ---------------------------------------------------------
    print_section("STEP 2: PRE-PROCESSING")
    
    # Split into Features (X) and Target (y)
    X = df.iloc[:, :-1]
    y = df.iloc[:, -1]

    # Normalize data (Scale to mean=0, variance=1)
    scaler = StandardScaler()
    X_scaled = scaler.fit_transform(X)
    print("✓ Data Normalized (StandardScaler applied)")

    # Partition Data (80% Train, 20% Test)
    test_ratio = 0.2
    X_train, X_test, y_train, y_test = train_test_split(X_scaled, y, test_size=test_ratio, random_state=42)
    
    # --- NEW OUTPUT: Split Ratio ---
    train_percent = int((1 - test_ratio) * 100)
    test_percent = int(test_ratio * 100)
    
    print(f"✓ Data Partitioned (Split Ratio {train_percent}:{test_percent}):")
    print(f"   > Training Set ({train_percent}%): {X_train.shape[0]} samples")
    print(f"   > Testing Set  ({test_percent}%): {X_test.shape[0]} samples")

    # ---------------------------------------------------------
    # STEP 3: HYPERPARAMETER TUNING (User Input)
    # ---------------------------------------------------------
    print_section("STEP 3: NETWORK CONFIGURATION (Tuning)")
    print("Instructions: Adjust these values to find the best model.")
    
    try:
        # 1. Hidden Nodes
        in_hidden = input("1. Enter Hidden Nodes (e.g., 30): ")
        param_hidden = int(in_hidden)

        # 2. Learning Rate
        in_lr = input("2. Enter Learning Rate (e.g., 0.001): ")
        param_lr = float(in_lr)

        # 3. Optimizer (New Input)
        print("\n   Choose Optimizer:")
        print("   [1] adam  (Default - Good for large datasets)")
        print("   [2] sgd   (Stochastic Gradient Descent)")
        print("   [3] lbfgs (Good for small datasets)")
        in_optim_choice = input("3. Enter Optimizer Choice (1, 2, or 3): ")
        
        # Map user choice to sklearn string
        if in_optim_choice == '1':
            param_solver = 'adam'
        elif in_optim_choice == '2':
            param_solver = 'sgd'
        elif in_optim_choice == '3':
            param_solver = 'lbfgs'
        else:
            print("   [!] Invalid choice. Defaulting to 'adam'")
            param_solver = 'adam'
        print(f"   > Selected Optimizer: {param_solver}\n")

        # 4. Epochs
        in_epochs = input("4. Enter Max Epochs (e.g., 500):  ")
        param_epochs = int(in_epochs)

        param_seed = 42 
        
    except ValueError:
        print("\n[!] Error: Invalid input. Please enter numbers only.")
        return

    # Initialize the Backpropagation Neural Network
    bpnn = MLPClassifier(
        hidden_layer_sizes=(param_hidden,),
        activation='relu',
        solver=param_solver,       # <--- Updated here
        learning_rate_init=param_lr,
        max_iter=param_epochs,
        random_state=param_seed,
        verbose=True
    )

    # ---------------------------------------------------------
    # STEP 4: TRAINING PROCESS
    # ---------------------------------------------------------
    print_section("STEP 4: TRAINING NETWORK")
    print(f"Training started with: Nodes={param_hidden}, LR={param_lr}, Optim={param_solver}, Epochs={param_epochs}...")
    print("-" * 60)
    
    # Train the model
    bpnn.fit(X_train, y_train)
    
    print("-" * 60)
    print("✓ Training Complete.")

    # ---------------------------------------------------------
    # STEP 5: FINAL EVALUATION & REPORT
    # ---------------------------------------------------------
    print_section("STEP 5: FINAL RESULTS & METRICS")

    # Predict on Test Data
    y_pred = bpnn.predict(X_test)

    # Calculate Metrics
    acc = accuracy_score(y_test, y_pred) * 100
    loss = bpnn.loss_
    cm = confusion_matrix(y_test, y_pred)
    
    # --- PRESENTATION OUTPUT ---
    print(f"MODEL CONFIGURATION:")
    print(f" • Hidden Layer Nodes: {param_hidden}")
    print(f" • Learning Rate:      {param_lr}")
    print(f" • Optimizer:          {param_solver}") # <--- Added to report
    print(f" • Max Epochs:         {param_epochs}")
    print("-" * 30)
    
    print(f"PERFORMANCE METRICS:")
    print(f" • Final Accuracy:     {acc:.2f}%")
    print(f" • Final Error (Loss): {loss:.5f}")
    print("-" * 30)

    print("\nCONFUSION MATRIX (Actual vs Predicted):")
    print(f"                 Predicted: NO   Predicted: YES")
    print(f"Actual: NO (Not Spam)  [ {cm[0][0]:^5} ]   [ {cm[0][1]:^5} ]")
    print(f"Actual: YES (Spam)     [ {cm[1][0]:^5} ]   [ {cm[1][1]:^5} ]")

    print("\nDETAILED CLASSIFICATION REPORT:")
    print(classification_report(y_test, y_pred, target_names=['Not Spam', 'Spam']))

if __name__ == "__main__":
    main()